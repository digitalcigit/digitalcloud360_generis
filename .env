# Genesis AI - Development Environment Configuration
# Configuration pour développement local

# Application
APP_NAME=genesis-ai-service
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development
TESTING_MODE=false

# API Configuration
API_V1_STR=/api/v1
SECRET_KEY=development-secret-key-genesis-ai-replace-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Database - PostgreSQL Docker pour développement local
POSTGRES_SERVER=localhost
POSTGRES_USER=genesis_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=genesis_db
POSTGRES_PORT=5435
DATABASE_URL=postgresql+asyncpg://genesis_user:your_secure_password_here@localhost:5435/genesis_db
TEST_DATABASE_URL=postgresql+asyncpg://test_user:test_password@localhost:5433/test_db

# Redis - Docker port 6382
REDIS_URL=redis://localhost:6382/0
REDIS_GENESIS_AI_DB=0
REDIS_SESSION_TTL=7200

# DigitalCloud360 Integration
DIGITALCLOUD360_API_URL=https://api.digitalcloud360.com
DIGITALCLOUD360_SERVICE_SECRET=change-me-in-production
DIGITALCLOUD360_TIMEOUT=30

# AI Services - Remplacer par de vraies clés
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
TAVILY_API_KEY=your-tavily-key
LOGOAI_API_KEY=your-logoai-key

# External Services URLs
LOGOAI_BASE_URL=https://api.logoai.com
TAVILY_BASE_URL=https://api.tavily.com

# Security & CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:8000"]

# Monitoring
PROMETHEUS_PORT=8001
SENTRY_DSN=

# Health Checks - Mode lenient pour développement
STRICT_HEALTH_CHECKS=false
VALIDATE_EXTERNAL_APIS=false