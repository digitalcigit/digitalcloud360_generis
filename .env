# =============================================================================
# GENESIS AI SERVICE - ENVIRONMENT CONFIGURATION
# =============================================================================

# Application
APP_NAME="Genesis AI Deep Agents"
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_V1_STR=/api/v1
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 30 days

# Database Configuration
POSTGRES_PASSWORD=genesis_pass
DATABASE_URL=postgresql+asyncpg://genesis_user:genesis_pass@postgres:5432/genesis_db

# Redis Configuration (Virtual File System)
REDIS_URL=redis://redis:6379/0

# DigitalCloud360 Integration
DIGITALCLOUD360_API_URL=https://api.digitalcloud360.com
DIGITALCLOUD360_SERVICE_SECRET=your-service-secret-here
DIGITALCLOUD360_TIMEOUT=30

# AI Services API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
TAVILY_API_KEY=your-tavily-api-key-here
LOGOAI_API_KEY=your-logoai-api-key-here

# External Services
LOGOAI_BASE_URL=https://api.logoai.com
TAVILY_BASE_URL=https://api.tavily.com

# Monitoring & Observability
PROMETHEUS_PORT=8001
SENTRY_DSN=your-sentry-dsn-here

# Development/Production Flags
ENVIRONMENT=development
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
